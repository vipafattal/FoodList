<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">


    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="345dp"
        android:layout_marginTop="15dp"
        android:src="@drawable/ic_settings_black_24dp"
        android:tint="@android:color/holo_blue_light"></ImageView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="40dp"
        android:text="Explore Recipes"
        android:fontFamily="cursive"
        android:textSize="30dp"
        android:textStyle="bold"
        android:textColor="@android:color/holo_green_dark"

        ></TextView>
    <androidx.cardview.widget.CardView
        android:layout_margin="20dp"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        app:cardCornerRadius="30dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginVertical="25dp"
            android:scaleType="centerCrop"
            android:src="@drawable/kabab"></ImageView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Al Kabab Al gead"
            android:layout_gravity="bottom"
            android:layout_marginHorizontal="50dp"
            android:fontFamily="cursive"
            android:textSize="20dp"
            android:textColor="@android:color/holo_blue_dark"
            ></TextView>
    </androidx.cardview.widget.CardView>



    <androidx.cardview.widget.CardView
        android:layout_margin="25dp"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        app:cardCornerRadius="30dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginVertical="15dp"
            android:src="@drawable/frout"></ImageView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Al medry aush asmo"
            android:layout_gravity="bottom"
            android:layout_marginHorizontal="50dp"
            android:fontFamily="cursive"
            android:textSize="20dp"
            android:textColor="@android:color/holo_blue_dark"
            ></TextView>

    </androidx.cardview.widget.CardView>



</LinearLayout>
